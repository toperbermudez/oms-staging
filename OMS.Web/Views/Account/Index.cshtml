@model OMS.Web.Models.UserCredentialViewModel

@{
    ViewBag.Title = "Login Account";
}


<div class="col-lg-4 col-lg-offset-4">
    <div class="panel">
        <div class="panel-body">
            @using (Html.BeginForm(AccountController.ActionNameConstants.Index,
                                   AccountController.NameConst,
                                   FormMethod.Post,
                                   new
                                   {
                                       @id = "loginForm"
                                   }))
            {
                <div class="col-lg-12">
                    <div class="alert alert-danger alert-dismissible errorAlert" style="display:none;" role="alert">
                        <strong id="errTitle"></strong>:<span id="errMsg"></span>
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    @Html.LabelFor(m => m.Username)
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
                <div class="form-group col-lg-12">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="col-lg-12">
                    <button id="btnLogin" type="submit" class="btn btn-success col-lg-12">Login</button>
                </div>
            }
        </div>
    </div>
</div>